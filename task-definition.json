{
  "family": "learningapp-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::637436418876:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::637436418876:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "637436418876.dkr.ecr.us-east-1.amazonaws.com/learningapp-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ALGORITHM",
          "value": "HS256"
        },
        {
          "name": "ACCESS_TOKEN_EXPIRE_MINUTES",
          "value": "30"
        },
        {
          "name": "REFRESH_TOKEN_EXPIRE_DAYS",
          "value": "7"
        },
        {
          "name": "FRONTEND_URL",
          "value": "http://learningapp-alb-1516781955.us-east-1.elb.amazonaws.com"
        },
        {
          "name": "ALLOWED_ORIGINS",
          "value": "[\"http://learningapp-alb-1516781955.us-east-1.elb.amazonaws.com\"]"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:637436418876:secret:learningapp/database_url"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:637436418876:secret:learningapp/secret_key"
        },
        {
          "name": "GOOGLE_CLIENT_ID",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:637436418876:secret:learningapp/google_client_id"
        },
        {
          "name": "GOOGLE_CLIENT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-1:637436418876:secret:learningapp/google_client_secret"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/learningapp",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "backend"
        }
      }
    },
    {
      "name": "frontend",
      "image": "637436418876.dkr.ecr.us-east-1.amazonaws.com/learningapp-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NEXT_PUBLIC_API_URL",
          "value": "http://learningapp-alb-1516781955.us-east-1.elb.amazonaws.com/api/v1"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/learningapp",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "frontend"
        }
      }
    }
  ]
}
